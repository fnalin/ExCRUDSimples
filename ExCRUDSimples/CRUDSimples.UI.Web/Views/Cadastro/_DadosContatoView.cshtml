@model IEnumerable<CRUDSimples.UI.Web.Models.Contato>

<div class="row">
    <br />
    <table id="relContatos" class="table table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Telefone</th>
                <th>Celular</th>
                <th>Email</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.Count() == 0)
            {
                <tr><td colspan="5" class="text-center"><em>Sem contatos!</em></td></tr>
            }
            else
            {
                foreach (var item in @Model)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Telefone</td>
                        <td>@item.Celular</td>
                        <td><a href="mailto:@item.Email">@item.Email</a></td>
                        <td class="mnutable">
                            <div class="btn-group">
                                <button class="btn btn-default del-contato-btn btn-sm" data-nome="@item.Nome" data-id="@item.ID" title="Excluir @item.Nome">
                                    <i class="glyphicon glyphicon-remove"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }}
        </tbody>

    </table>
</div>